<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h3><%= job.title %> </h3>
</div>
    <div class="card col-6 offset-3 show-card">
        <div class="card-body">
          <p class="card-text">
            <%= job.company %><br>
            <%= job.location %><br>
            <%= job.type %><br>
            &#8377; <%= job.salary.toLocaleString("en-IN") %>/annum<br>
            <%= job.description %><br>
        </p>
        <h4>Job Highlights</h4>
            <ul>
                <% job.job_highlights.split(',').forEach(function(highlight) { %>
                    <li><%= highlight.trim() %></li>
                <% }); %>
            </ul>
            <h4>Required Skills</h4>
            <ul>
                <% job.required_skills.split(',').forEach(function(skill) { %>
                    <li><%= skill.trim() %></li>
                <% }); %>
            </ul>
        </div>
      </div>
<br>
    <div class="btns"> 
    <a href="/listings/<%= job.id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn mt-3" >Edit</a>
    <br>
    <form method="POST" action="/listings/<%= job.id %>?_method=DELETE">
        <button class="btn btn-dark offset-5 mt-3">Delete</button>
    </form>
</div>
</div>

    

